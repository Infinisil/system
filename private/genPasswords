#! /usr/bin/env nix-shell
#! nix-shell -i bash -p pass

file=passwords.nix

rm $file

printf "{\n" > $file

printf "  %s = \"%s\";\n" "mpd" "$(pass mpd | head -n 1)" >> $file
printf "  %s = \"%s\";\n" "ethWlan" "$(pass wlan/eth | head -n 1)" >> $file
printf "  %s = \"%s\";\n" "iPhoneWlan" "$(pass wlan/iPhone | head -n 1)" >> $file

printf "}\n" >> $file
