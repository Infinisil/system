Config
	{ font = "xft:FantasqueSansMono Nerd Font:pixelsize=14"
	, bgColor = "black"
	, fgColor = "grey"
	, position = Top
	, commands =
		[	Run Cpu
			[ "-t", "<total>%"
			, "-L", "10"
			, "-H", "50"
			, "-l", "green"
			, "-h", "red" ] 10
		, Run Memory ["-t", "<usedratio>%"] 10
		, Run CoreTemp
			[ "-t", "<core0>/<core1>°C "
			, "-L", "65"
			,	"-H", "90"
			,	"-l", "lightblue"
			,	"-h", "red" ] 50
		, Run Date "%a %d.%m.%y %T" "date" 10
		, Run StdinReader
		, Run Weather "IGOSSAU46"
			[ "-t", "Zürich <tempC>C°" ] 36000
		, Run DynNetwork
			[ "-t" , "<tx><rx>kB/s | "
			, "-L" , "10000"
			, "-H" , "500000"
			, "-l" , "green"
			, "-n" , "orange"
			, "-h" , "red" ] 10
		, Run Com "/global/system/bin/power.sh" [] "power" 10
		, Run Com "/global/system/bin/batt.sh" [] "bt" 100
		, Run PipeReader "-:/home/infinisil/Music/mpd/current" "mpd"
		, Run Volume "default" "Master"
			[ "-t", "Vol: <volumebar>" ] 10
	]
	, sepChar = "%"
	, alignSep = "}{"
	, template = "%StdinReader% } %mpd% | %default:Master% { %power%A  | %dynnetwork%%coretemp% | %cpu%/%memory%  | %bt% <fc=#ee9a00>%date%</fc>"
	}
